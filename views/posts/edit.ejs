<%- include('../partials/header') %>

<h2>Edit Post</h2>
    <!-- <%=JSON.stringify(post)%> -->

<form action="/posts/<%=id%>?_method=PUT" method="POST">
    <label>Topic:</label>
    <input type="text" name="topic" value="<%=post.topic%>" /> </label><br />

    <label>Subject:</label>
    <select name="subject">
        <option value="EM">E-Math</option>
        <option value="AM">A-Math</option>
    </select> </br>
    <label>Level:</label>
    <select name="level">
        <option value="S3">Sec 3</option>
        <option value="S4">Sec 4</option>
    </select> </br>
    <button type="submit">Update Question</button>
    </form>
    <form action="/posts/<%=post._id%>?_method=DELETE" method="post">
        <button type="submit" onclick="return confirm('Are you sure you want to delete this post?')">Delete</button>
    </form>

<!-- <%-e%> -->



