<%- include('../partials/header') %>

<h2>Edit Post</h2>
<img src="<%= post.imageUrl %>" id="img-qns"/>
<br>
<div id="edit-form">
<form action="/posts/<%=id%>?_method=PUT" method="POST">
    <label>Image URL:</label>
    <br>
    <input type="text" name="imageUrl" pattern="^(https?|ftp):\/\/[^\s/$.?#].[^\s]*$"
        title="Please enter a valid URL." value="<%=post.imageUrl%>"><br>
    <br>
    <label>Topic:</label>
    <input type="text" name="topic" value="<%=post.topic%>" required> </label><br />
    <br>
    <label>Description</label>
    <textarea name="description" required><%=post.description%></textarea>
    <br><br>
    <label>Subject:</label>
    <br>
    <select name="subject">
        <option value="EM">Elementary Mathematics</option>
        <option value="AM">Additional Mathematics</option>
    </select> 
    <br><br>
    <label>Level:</label>
    <select name="level">
        <option value="S1">Sec 1</option>
        <option value="S2">Sec 2</option>
        <option value="S3">Sec 3</option>
        <option value="S4">Sec 4</option>
        <option value="S5">Sec 5</option>
    </select>
    <br><br>
    <button type="submit" id="buttonMisc">Update Question</button>
    <button type="reset" id="buttonMisc">Reset</button>
</form>
</div>
<br><br><br>

<%- include('../partials/footer') %>