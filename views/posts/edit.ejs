<%- include('../partials/header') %>

<h2>Edit Post</h2>

<img src="<%= post.imageUrl %>" /><br><br>

<form action="/posts/<%=id%>?_method=PUT" method="POST">
    <label>Topic:</label>
    <input type="text" name="topic" value="<%=post.topic%>" /> </label><br />
    <label>Description</label><br>
    <textarea name="description" value="<%post.description%>"></textarea><br>
    <label>Subject:</label>
    <select name="subject">
        <option value="EM">Elementary Mathematics</option>
        <option value="AM">Additional Mathematics</option>
    </select> </br>
    <label>Level:</label>
    <select name="level">
        <option value="S1">Sec 1</option>
        <option value="S2">Sec 2</option>
        <option value="S3">Sec 3</option>
        <option value="S4">Sec 4</option>
        <option value="S5">Sec 5</option>
    </select> </br>
    <button type="submit">Update Question</button>
    <button type="reset">Reset</button>
    </form>
    <form action="/posts/<%=post._id%>?_method=DELETE" method="post">
        <button type="submit" onclick="return confirm('Are you sure you want to delete this post?')">Delete</button>
    </form>




<%- include('../partials/footer') %>