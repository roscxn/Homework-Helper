<%- include('../partials/header') %>
<h2>Question:</h2>
    <img src="<%= post.imageUrl %>" /><br><br>
<div id="questions">
    <label>Description:</label>
    <%= post.description %> </br>
        <label>Topic:</label>
        <%= post.topic %> </br>
            <label>Subject:</label>
            <%= post.subject %> </br>
                <label>Level:</label>
                <%= post.level %> </br>
                    Posted by: <%= post.name %>
                        on <%= post.updatedAt.toLocaleDateString() %>
</div><br><br>
 <hr>
                        <h2>Comment:</h2>
                        <div id="comments">
<% if (post.comments.length) { %>
    <% post.comments.forEach(function(c) { %>
        <img src="<%= c.commentUrl %>" /><br>
        <%= c.content %><br>
            Posted by: <%= c.name %> on <%= c.createdAt.toLocaleDateString() %> <br>
                    <form action="/posts/<%=post._id%>/comments/<%=c._id%>?_method=DELETE" method="post">
                        <button type="submit"
                            onclick="return confirm('Are you sure you want to delete this comment?')">Delete</button>
                    </form>
                    <% }); %>
                        <br>
                        <% } else { %>
                            <h5>No Comments Yet</h5>
                            <% } %>
</div>
<hr>

<h2>Reply to Question</h2>
<div id="replies">
<form id="comment" method="POST" action="/posts/<%= post._id %>/comments">
    <label>Type your reply here: </label><br>
    <textarea name="content" required></textarea><br>
    <label>Image URL:</label>
    <input type="text" id="image2_url" name="commentUrl"><br>
    <input type="submit" value="Add Comment">
</form>

</div>
                               



                        
                        



<%- include('../partials/footer') %>