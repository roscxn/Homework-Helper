<%- include('../partials/header') %>

<h2>Individual Question</h2>
<div id="questions">
<img src="<%= post.imageUrl %>" /><br><br>

<label>Description:</label>
<%= post.description %> </br>

    <label>Topic:</label>
    <%= post.topic %> </br>

        <label>Subject:</label>
        <%= post.subject %> </br>

            <label>Level:</label>
            <%= post.level %> </br>

                Posted by: <%= post.name %>
                    on <%= post.updatedAt.toLocaleDateString() %> <br>

                        </br></br>

                        <h2>Display Comment</h2>
                        <% if (post.comments.length) { %>
                            <% post.comments.forEach(function(c) { %>
                                Posted by: <%= c.name %>
                                    on <%= c.createdAt.toLocaleDateString() %> <br>
                                        <img src="<%= c.commentUrl %>" /><br>
                                        <%= c.content %><br>
                                            <form action="/posts/<%=post._id%>/comments/<%=c._id%>?_method=DELETE"
                                                method="post">
                                                <button type="submit"
                                                    onclick="return confirm('Are you sure you want to delete this comment?')">Delete</button>
                                            </form>

                                            <% }); %>
                                                <br>

                                                <% } else { %>
                                                    <h5>No Comments Yet</h5>
                                                    <% } %>


                                                        <h2>Comments</h2>

                                                        <form id="comment" method="POST"
                                                            action="/posts/<%= post._id %>/comments">
                                                            <label>Type your reply here: </label><br>
                                                            <textarea name="content" required></textarea><br>
                                                            <label>Image URL:</label>
                                                            <input type="text" id="image2_url" name="commentUrl"><br>

                                                            <input type="submit" value="Add Comment">
                                                        </form>


</div>
    

    <%- include('../partials/footer') %>